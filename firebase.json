{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },{
        "source": "/paletteColors",
        "function": "paletteColors"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
